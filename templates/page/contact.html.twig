{% extends 'base.html.twig' %}

{% block title %}Contact - My Portfolio{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold text-center text-[#1a237e] mb-8">Contact Me</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="bg-green-100 text-green-800 p-4 mb-6 rounded shadow text-center">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    <p class="mb-6 text-center text-gray-700">I'd love to hear from you! Fill out the form below to get in touch.</p>
    <div class="flex justify-center">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg border border-gray-200">
            {{ form_start(contactForm) }}
                <div class="mb-4">
                    {{ form_label(contactForm.name, null, {'label_attr': {'class': 'block mb-1 font-semibold text-gray-700'}}) }}
                    {{ form_widget(contactForm.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                    {{ form_errors(contactForm.name) }}
                </div>
                <div class="mb-4">
                    {{ form_label(contactForm.email, null, {'label_attr': {'class': 'block mb-1 font-semibold text-gray-700'}}) }}
                    {{ form_widget(contactForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                    {{ form_errors(contactForm.email) }}
                </div>
                <div class="mb-6">
                    {{ form_label(contactForm.message, null, {'label_attr': {'class': 'block mb-1 font-semibold text-gray-700'}}) }}
                    {{ form_widget(contactForm.message, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400 resize-y min-h-[120px]'}}) }}
                    {{ form_errors(contactForm.message) }}
                </div>
                <div class="text-center">
                    {{ form_widget(contactForm.send, {'attr': {'class': 'bg-blue-700 hover:bg-blue-800 text-white font-bold py-2 px-6 rounded transition shadow-md'}}) }}
                </div>
            {{ form_end(contactForm) }}
        </div>
    </div>

{% endblock %}
